@{ Layout = "~/Views/Shared/_DanismanLayout.cshtml"; }
@model TezYonetimS.Models.TezOlusturModel



<ul class="nav nav-tabs" style=" margin-left:18%; font-size:150%">

    <li class="active"><a data-toggle="pill" href="#menu1">Detay</a></li>
    <li><a data-toggle="tab" href="#menu2">Yapılacak İşler</a></li>
    <li><a data-toggle="tab" href="#menu3">Toplantılar</a></li>
    <li><a data-toggle="tab" href="#menu4">Notlar</a></li>
</ul>
<br />
@if (ViewBag.Uyari != null)
{
<div class="alert alert-danger" role="alert">
    @ViewBag.Uyari
</div>}
@if (TempData["Basarili"] != null)
{
<div class="alert alert-success" role="alert">
    @TempData["Basarili"]
</div>}
<div class="tab-content">
    <div id="menu1" class="tab-pane fade in active ">

        @Html.Partial("_devamedendetay", Model)
    </div>
    <div id="menu2" class="tab-pane fade">
        <center>
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#yapilacak"><i class="pe-7s-plus"></i> Yapılacak İş Oluştur   </button>
        </center>

        <div class="modal fade" id="yapilacak" tabindex="-1" role="dialog" aria-labelledby="yeniIs" aria-hidden="true">
            <div class="modal-dialog" role="document">
                @Html.Partial("_yeniYapilacakIs", Model)
            </div>
        </div>

        @Html.Partial("_yapilacakisler", Model)
    </div>
    <div id="menu3" class="tab-pane fade">

        <center>
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal"><i class="pe-7s-plus"></i> Toplantı Oluştur </button>
        </center>

        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                @Html.Partial("_YeniToplanti", Model)
            </div>
        </div>
        @Html.Partial("_TezToplanti", Model)


    </div>
    <div id="menu4" class="tab-pane fade">
        @Html.Partial("_Notlar", Model)

    </div>
</div>

<style>
    .modal-backdrop {
        z-index: -1;
        display: none;
    }

    .modal-lg {
        width: 90%;
    }

  

    .tabkismi a {
        color: #663399
    }

    .ui-widget-header .ui-icon {
        background: #663399;
    }
</style>
<script>
    $('.modal').on('hidden.bs.modal', function () {
        $("body").css("padding-right", "");
    });
</script>


