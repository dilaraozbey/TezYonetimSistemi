@{ Layout = "~/Views/Shared/_DanismanLayout.cshtml"; 
  }
@model TezYonetimS.Models.TezOlusturModel



<ul class="nav nav-tabs" style=" margin-left:18%; font-size:150%">

    <li class="active"><a data-toggle="pill" href="#menu1">Detay</a></li>
    <li><a data-toggle="tab" href="#menu2">Alt İşler</a></li>
    <li><a data-toggle="tab" href="#menu3">Bağlı İşler</a></li>
    <li><a data-toggle="tab" href="#menu4">Bağlı Olacağı İşler</a></li>
    <li><a data-toggle="tab" href="#menu5">Sohbet</a></li>
</ul>
<br />
@if (ViewBag.Uyari != null)
{
<div class="alert alert-danger" role="alert">
    @ViewBag.Uyari
</div>}
@if (TempData["Basarili"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Basarili"]
    </div>
    }
@if (TempData["Uyari"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Uyari"]
    </div>
}
<div class="tab-content">
    <div id="menu1" class="tab-pane fade in active ">

        @Html.Partial("_yapilacakisdetay", Model)
    </div>
    <div id="menu2" class="tab-pane fade">

        <center>
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#yeniAltIs"><i class="pe-7s-plus"></i> Yeni Alt İş Oluştur   </button>
        </center>

        <div class="modal fade" id="yeniAltIs" tabindex="-1" role="dialog" aria-labelledby="yeniAltIs" aria-hidden="true">
            <div class="modal-dialog" role="document">
                @Html.Partial("_YeniAltIs", Model)
            </div>
        </div>

        @Html.Partial("_altisler", Model)
    </div>

    <div id="menu3" class="tab-pane fade">
        <p> Bağlı İşler: Belirtilen yapılacak işin tamamlanmasından sonra başlayacak işlerdir.</p>

        @Html.Partial("_bagliisler", Model)



    </div>
    <div id="menu4" class="tab-pane fade">
        <p style="margin-top:10px"> Bağlı Olacağı İşler: Belirtilen yapılacak işin başlangıcından önce bitmesi gereken işlerdir.</p>
        @Html.Partial("_bagliolacagiisler", Model)
    </div>

    <div id="menu5" class="tab-pane fade">

        
    </div>
   
</div>

<style>
    .modal-backdrop {
        z-index: -1;
        display: none;
    }

    .modal-lg {
        width: 90%;
    }



    .tabkismi a {
        color: #663399
    }

    .ui-widget-header .ui-icon {
        background: #663399;
    }
</style>
<script>
    $('.modal').on('hidden.bs.modal', function () {
        $("body").css("padding-right", "");
    });
</script>


