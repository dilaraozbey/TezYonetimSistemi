@{ ViewBag.Title = "Devam Eden Tez";
                Layout = "~/Views/Shared/_OgrenciLayout.cshtml"; }

@model TezYonetimS.Models.Akademikturlermodel


@using (Html.BeginForm("DevamEdenTez", "Ogrenci", FormMethod.Post))
{

<div class="content">

    @if (Model.SecilenTezlerList != null)
    {
<br />
                    <br />
          <div class="table-responsive table-full-width">
                 <table class="table table-hover table-striped">
                       <thead>
                         <th style=" font-size:15px">OLUŞTURULMA TARİHİ</th>
                         <th style=" font-size:15px">TEZ ADI</th>
                         <th style=" font-size:15px">DANIŞMAN</th>
                       </thead>
                        <tbody>
                            @foreach (var tez in Model.SecilenTezlerList)
                             {
                                <tr>

                                    <td>@tez.OlusturulmaTarihi.Date.ToString().Substring(0, 10)</td>
                                    <td><a href="@Url.Action("DevamEdenTezDetay", "Ogrenci",new { Id=tez.Id}) ">@tez.Ad</a></td>
                                    <td>
                                        @tez.Kullanici2.Ad @tez.Kullanici2.Soyad

                                    </td>
                                </tr>}

                         </tbody>
                  </table>

           </div>}


</div>}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")