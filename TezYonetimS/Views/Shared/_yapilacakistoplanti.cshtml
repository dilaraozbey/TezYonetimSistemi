
@model TezYonetimS.Models.TezOlusturModel




<div class="row" style="margin-top:40px">
    @foreach (var toplanti in Model.TezToplantilarList)
    {
        <div class="col-sm-4" style="height:55%">
            <div class="card border border-primary mb-3" style=" border: 3px double #8570afcf !important">
                <center>
                    @if (DateTime.Compare(toplanti.Tarih, DateTime.Now.Date) < 0 && toplanti.DurumId == 2)
                    {
                        <h5 style="padding-top:8%;padding-left:3%;padding-right:3% ;background-color:rgb(226, 4, 4 );opacity :0.6; color:white" class="card-header">@toplanti.Tarih.Date.ToString().Substring(0, 10) -  @toplanti.Saat</h5>
                        <hr />
                    }
                    @if (DateTime.Compare(toplanti.Tarih, DateTime.Now.Date) > 0 || toplanti.DurumId == 1)
                    {
                        <h5 style="padding-top:8%;padding-left:3%;padding-right:3%" class="card-header">@toplanti.Tarih.Date.ToString().Substring(0, 10) -  @toplanti.Saat</h5>
                        <hr />

                    }
                    @if (DateTime.Compare(toplanti.Tarih, DateTime.Now.Date) == 0 && toplanti.DurumId == 2)
                    {
                        <h5 style="padding-top:8%;padding-left:3%;padding-right:3%; background-color:rgb(2, 234, 199 ); opacity :0.6; " class="card-header">@toplanti.Tarih.Date.ToString().Substring(0, 10) -  @toplanti.Saat</h5>
                        <hr />

                    }
                    <div class="card-body">
                        <h5 style="color:#492975" class="card-title">@toplanti.Adı</h5>
                      
                        @if (toplanti.ToplantiDurumu.Id == 2)
                        {
                            <button class="btn btn-success" onclick="location.href='@Url.Action("ToplantıTamamla", "Danisman",new { toplanti.Id })'"> Toplantı Tamamlandı</button>
                            <button class="btn btn-danger" onclick="location.href='@Url.Action("ToplantiSil", "Danisman",new {toplanti.Id})'"> Sil</button>
                        }
                    </div>
                    <hr />
                    <div class="card-footer text-muted" style="padding-bottom:3%">
                        @toplanti.ToplantiDurumu.Durum

                    </div>
                </center>

            </div>
        </div>
    }
</div>

