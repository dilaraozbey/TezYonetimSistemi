

@model TezYonetimS.Models.Akademikturlermodel


@using (Html.BeginForm("DevamEdenTezDetay", "Ogrenci", FormMethod.Post))
{
    <div class="content">
        <div class="row">

            <div class="col-md-6">
                <div class="form-group">
                    <label>Tez Adı*</label>
                    @Html.TextBoxFor(m => m.YeniTez.Ad, Model.YeniTez.Ad, new { disabled = "true", @class = "form-control", @placeholder = "Tez Adı" })
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label>Tez Adı Türkçe</label>
                    @Html.TextBoxFor(m => m.YeniTez.TurkceAdi, Model.YeniTez.TurkceAdi, new { disabled = "true", @class = "form-control", @placeholder = "Tez Adı Türkçe" })
                </div>
            </div>
        </div>

        <div class="row">

            <div class="form-group col-md-4">

            </div>
            <div class="form-group col-md-4">

                <label for="inputEmail4">Akademik Bölüm</label>
                @Html.DropDownListFor(m => m.BolumId, Model.BolumlerList, Model.YeniTez.AkademikBolum.BolumAdi, new { disabled = "true", @class = "dropdown form-control", @style = "color:white ;background-color:#492975" })
            </div>
            <div class="form-group col-md-4">

            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-2">

            </div>

            <div class="form-group col-md-4">

                <label for="inputEmail4">Tez Dili*</label>
                @Html.DropDownListFor(m => m.DilId, Model.DillerList, Model.YeniTez.Dil.Ad, new
                {
                @class = "dropdown form-control",
                @style = "color:white ;background-color:#02081dcf"
                })
            </div>
            <div class="form-group col-md-4">

                <label for="inputEmail4">Tez Türü*</label>
                @Html.DropDownListFor(m => m.TezTurId, Model.TezTurleriList, Model.YeniTez.TezTuru.Tur, new { disabled = "true", @class = "dropdown form-control", @style = "color:white ;background-color:#02081dcf" })
            </div>
            <div class="form-group col-md-2">

            </div>
        </div>
        <div class="row">

            <div class="form-group col-md-6">

                <label for="inputEmail4">Yazar1</label>
                @if (Model.YeniTez.Kullanici != null)
                {
                    @Html.TextBox("yazar1", Model.YeniTez.Kullanici.Ad + " " + Model.YeniTez.Kullanici.Soyad, new { disabled = "true", @class = "form-control", @placeholder = "Yazar1" }) }
                else
                {
                    @Html.TextBox("yazar1", null, new { disabled = "true", @class = "form-control", @placeholder = "Yazar1" })}
            </div>
            <div class="form-group col-md-6">

                <label for="inputEmail4">Yazar2</label>
                @if (Model.YeniTez.Kullanici1 != null)
                {
                    @Html.TextBox("yazar2", Model.YeniTez.Kullanici1.Ad + " " + Model.YeniTez.Kullanici1.Soyad, new { disabled = "true", @class = "form-control", @placeholder = "Yazar2" }) }
                else
                {
                    @Html.TextBox("yazar2", null, new { @class = "form-control", @placeholder = "Yazar2" })}
            </div>
            <div class="form-group col-md-6" style="margin-left:28%">
                <label for="inputEmail4">Danışman</label>
                @if (Model.YeniTez.Kullanici2 != null)
                {
                    @Html.TextBox("danisman", Model.YeniTez.Kullanici2.Ad + " " + Model.YeniTez.Kullanici2.Soyad, new { disabled = "true", @class = "form-control", @placeholder = "danisman" }) }
                else
                {
                    @Html.TextBox("danisman", null, new { disabled = "true", @class = "form-control", @placeholder = "Danışman" })}
            </div>

        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Anahtar Kelimeler</label>
                    @Html.TextBoxFor(m => m.YeniTez.AnahtarKelimeler, Model.YeniTez.AnahtarKelimeler, new { disabled = "true", @class = "form-control", @placeholder = "Anahtar Kelimeler " })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <lbel>Özet*</lbel>
                    @Html.TextBoxFor(m => m.YeniTez.Ozet, Model.YeniTez.Ozet, new { disabled = "true", @class = "form-control" })
                </div>
            </div>
        </div>
    </div>}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")